    body {
      font-family: Arial, sans-serif;
    }
    .form-container {
      width: 400px;
      margin: 0 auto;
      padding: 20px;
      border: 1px solid #ccc;
      border-radius: 8px;
    }
    .form-container h2 {
      text-align: center;
    }
    .form-screen {
      display: none;
    }
    .form-screen.active {
      display: block;
    }
    .form-buttons {
      display: flex;
      justify-content: space-between;
    }
    .form-buttons button {
      padding: 10px;
      border: none;
      background-color: #4CAF50;
      color: white;
      cursor: pointer;
    }
    .form-buttons button:disabled {
      background-color: #ccc;
    }
  </style>
